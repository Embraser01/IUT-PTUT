<!doctype html>
<html lang="fr">
<head>
    <meta charset="UTF-8">
    <title><%= (title) ? title + ' | ' + AppName : AppName %></title>
    <link rel="stylesheet"
          href="https://fonts.googleapis.com/css?family=Roboto:regular,bold,italic,thin,light,bolditalic,black,medium&lang=fr">
    <link rel="stylesheet" href="https://fonts.googleapis.com/icon?family=Material+Icons">

    <!--STYLES-->
    <!--STYLES END-->

    <!--SCRIPTS-->
    <!--SCRIPTS END-->

</head>
<body>
<div class="mdl-layout mdl-js-layout mdl-layout--fixed-header">

    <header class="mdl-layout__header">
        <div class="page-bar mdl-layout__header-row">
            <nav class="mdl-navigation navigation-back">
                <a href="#" class="mdl-navigation__link mdl-navigation__link--icon">
                    <i class="material-icons hover">arrow_back</i>
                </a>
            </nav>

            <span class="mdl-layout-title"><%= title %></span>
            <div class="mdl-layout-spacer"></div>

            <nav class="mdl-navigation mdl-layout--large-screen-only">
                <% if(req.session.user != null) { %>
                <a id="menu-user"
                   class="mdl-navigation__link mdl-navigation__link--icon">
                    <img class="avatar" src="/images/users/<%= req.session.user.id %>.jpg">
                    <span><%= req.user.display_name %></span>
                    <i class="material-icons">keyboard_arrow_down</i>
                </a>

                <ul class="mdl-menu mdl-menu--bottom-right mdl-js-menu mdl-js-ripple-effect"
                    for="menu-user">
                    <li class="mdl-menu__item"><a class="mdl-navigation__link"
                                                  href="/auth/process/logout">Logout</a></li>

                </ul>
                <% } else { %>
                <a href="/auth/login" class="mdl-navigation__link">Connexion</a>
                <a href="/auth/signup" class="mdl-navigation__link">Inscription</a>
                <% } %>
            </nav>
        </div>
    </header>

    <main id="mindmap_wrapper" class="mdl-layout__content">
        <div class="page-content">

            <%- body %>

        </div>
    </main>
</div>
</body>
</html>