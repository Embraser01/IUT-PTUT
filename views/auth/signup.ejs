<h2 class="center-align">Inscription</h2>

<div class="row">
    <div class="col col-xs-12 col-sm-6 col-md-8">
        <div class="card card-auth-illustration">
            <span class="card-title">Explorez les cartes que vous aimez</span>
        </div>
    </div>
    <div class="col col-xs-12 col-sm-6 col-md-4">

        <div class="card-panel card-signup">
            <h5 class="center-align">Inscription</h5>
                <form action="/auth/process/signup" method="post">
                    <div class="row">
                        <div class="input-field col-xs-12 col-md-6">
                            <input id="input-lastname" type="text" class="validate" name="lastname">
                            <label for="input-lastname">Nom</label>
                        </div>
                        <div class="input-field col-xs-12 col-md-6">
                            <input id="input-firstname" type="text" class="validate" name="firstname">
                            <label for="input-firstname">Pr√©nom</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col-xs-12">
                            <input id="input-email" type="email" class="validate" name="mail">
                            <label for="input-email">Adresse e-mail</label>
                        </div>
                    </div>
                    <div class="row">
                        <div class="input-field col-xs-12 col-md-6">
                            <input id="input-password" type="password" class="validate" name="password">
                            <label for="input-password">Mot de passe</label>
                        </div>
                        <div class="input-field col-xs-12 col-md-6">
                            <input id="input-password-confirmation" type="password" class="validate" name="password_confirmation">
                            <label for="input-password-confirmation">Mot de passe</label>
                        </div>
                    </div>

                    <div class="row">
                        <div class="col-xs-12 center-align">
                            <button class="btn blue waves-effect waves-light" type="submit" name="action">S'inscrire
                                <i class="material-icons right">send</i>
                            </button>
                        </div>
                    </div>
                </form>
            </section>
        </div>
    </div>
</div>
